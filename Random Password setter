#Banking system password setter

import random
def pas():
    Password = random.randint(0,25)
    count = 0

    while True:
        count +=1
        num = int(input(" Enter your Password "))

        if num < Password:
            print(" The Password you entered is wrong :( Sorry ")
        elif num > Password:
            print(" You are wrong again, You have entered a larger value ")

        else:
            print(" Your device is unlocked",count)

if __name__=="__main__":
    pas()
